    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@sxzz/eslint-config-prettier": "^2.4.6",
    "@sxzz/eslint-config-ts": "^2.4.6",
    "@types/node": "^18.17.1",
    "eslint": "^8.46.0",
    "eslint-define-config": "^1.22.0",
    "fast-glob": "^3.3.1",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
